<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movie_cell_height"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/movie_img"
        android:layout_width="@dimen/movie_img_width"
        android:layout_height="@dimen/movie_img_height"
        android:layout_marginLeft="@dimen/cell_movie_margin"/>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cell_movie_margin"
        android:layout_marginRight="@dimen/cell_movie_margin"
        android:layout_marginTop="@dimen/cell_movie_margin"
        android:layout_toRightOf="@id/movie_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="Movie title" />

    <TextView
        android:id="@+id/movie_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_title"
        android:layout_marginLeft="@dimen/cell_movie_margin"
        android:layout_marginRight="@dimen/cell_movie_margin"
        android:layout_toRightOf="@id/movie_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="2018-10-21" />


</RelativeLayout>